{
  "exclude": [
    "(^legacy/)",
    "(\\.project$)"
  ],
  "linters": {
    "chmod": {
      "type": "chmod"
    },
    "filename": {
      "type": "filename"
    },
    "json": {
      "type": "json",
      "include": [
        "(^\\.arcconfig$)",
        "(^\\.arclint$)",
        "(\\.json$)"
      ]
    },
    "generated": {
      "type": "generated"
    },
    "nolint": {
      "type": "nolint"
    },
    "spelling": {
      "type": "spelling"
    },
    "text": {
      "type": "text",
      "severity": {
        "3": "disabled",
        "5": "advice"
      },
      "exclude": [
        "(^\\Configure.ac$)",
        "(^\\Makefile.am$)",
        "(^\\.mk$)"
      ]
    }
  }
}
